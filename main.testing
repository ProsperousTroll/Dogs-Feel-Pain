function love.load()
    circle = {}
    circle.x = 420
    circle.y = 260
    circle.inDir = 0
    speed = 0
    accel = 0.1
end

function love.update(dt)

    if love.keyboard.isDown("d") and love.keyboard.isDown("a") then
        circle.inDir = 0
    elseif love.keyboard.isDown("d") then
        circle.inDir = 1
    elseif love.keyboard.isDown("a") then 
        circle.inDir = -1
    else
        circle.inDir = 0
    end

    if speed < 8 and circle.inDir ~= 0 then 
        speed = speed + accel
    elseif circle.inDir == 0 then
        speed = 0
    end

    circle.x = circle.x + (circle.inDir * speed)
   

end

function love.draw()
    love.graphics.circle("fill", circle.x, circle.y, 25)
    love.graphics.print(circle.inDir, 420, 60)
    love.graphics.print(circle.x, 420, 30)
    love.graphics.print(speed, 420, 10)
end